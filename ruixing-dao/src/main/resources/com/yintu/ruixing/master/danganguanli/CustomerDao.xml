            </if>
            <if test="typeId != null">
                and cer.type_id=#{typeId,jdbcType=INTEGER}
            </if>
            <if test="departmentId != null">
                and cd.id=#{departmentId,jdbcType=INTEGER}
            </if>
            <if test="name != null">
                and cer.name like concat('%',#{name,jdbcType=VARCHAR},'%')
            </if>
        </where>
    </sql>
