            parent_id =#{id}

    </select>
    <select id="findXiangMuDataById" parameterType="java.lang.Integer" resultMap="ChanPinJiaoFu">
        SELECT
            cp.NAME,
            cf.*
        FROM
            mro_chanpinjiaofu_property cp,
            mro_chanpinjiaofu cf
