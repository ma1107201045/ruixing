    <!--编辑分数-->
    <update id="updateByPrimaryKeySelective" parameterType="com.yintu.ruixing.paigongguanli.PaiGongGuanLiTaskUserEntity">
        update mro_paigongguanli_task_user
        <set>
            <if test="uid != null">
